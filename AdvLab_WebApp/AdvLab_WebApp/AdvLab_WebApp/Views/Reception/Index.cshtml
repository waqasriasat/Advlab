                    <div class="form-group">
                        <label asp-for="DescCashierModel.ConsName">Consultant Name</label>
                        <input asp-for="DescCashierModel.ConsName" class="form-control" />
                        <span asp-validation-for="DescCashierModel.ConsName" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-6">
            <div class="row borderfirst">
                <div class="col-12 col-md-2 col-lg-2">
                    <div class="form-group">
                        <label asp-for="DescLabModel.DescID">Desc ID</label>
                        <input asp-for="DescLabModel.DescID" class="form-control" />
                        <span asp-validation-for="DescLabModel.DescID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-8 col-lg-8">
                    <div class="form-group">
                        <label asp-for="DescLabModel.DescName">Description Name</label>
                        <input asp-for="DescLabModel.DescName" class="form-control" />
                        <span asp-validation-for="DescLabModel.DescName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-2 col-lg-2">
                    <div class="form-group">
                        <label asp-for="DescLabModel.Charges">Charges</label>
                        <input asp-for="DescLabModel.Charges" class="form-control" />
                        <span asp-validation-for="DescLabModel.Charges" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row borderfirst" style="height: 262px;">
                <table id="myTable" class="table">
                    <thead>
                        <tr>
                            <th>Desc ID</th>
                            <th>Description Name</th>
                            <th>Charges</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DescLabModelItem)
                        {
                            <tr>
                                <td>@item.DescID</td>
                                <td>@item.DescName</td>
                                <td>@item.Charges</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="row borderfirst">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <label asp-for="DescCashierModel.Comments">Comments</label>>
                        <input asp-for="DescCashierModel.Comments" type="text" class="form-control" style="height: 100px;" />
                        <span asp-validation-for="DescCashierModel.Comments" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-2 col-lg-2">
            <div class="row borderfirst" style="height: 480px;">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <label asp-for="DescCashierModel.PaymentMode">Payment Mode</label>
                        <input asp-for="DescCashierModel.PaymentMode" class="form-control"/>
                        <span asp-validation-for="DescCashierModel.PaymentMode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <label asp-for="DescCashierModel.GrossA">Gross Amount</label>
                        <input asp-for="DescCashierModel.GrossA" class="form-control" value="0" readonly="readonly" />
                        <span asp-validation-for="DescCashierModel.GrossA" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <label asp-for="DescCashierModel.Discount">Discount (Rs.)</label>
                        <input asp-for="DescCashierModel.Discount" class="form-control" value="0" />
                        <span asp-validation-for="DescCashierModel.Discount" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <label asp-for="DescCashierModel.DiscPer">Discount (%)</label>
                        <input asp-for="DescCashierModel.DiscPer" class="form-control" value="0" />
                        <span asp-validation-for="DescCashierModel.DiscPer" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <label asp-for="DescCashierModel.TotalA">Total Amount</label>
                        <input asp-for="DescCashierModel.TotalA" class="form-control" value="0" readonly="readonly" />
                        <span asp-validation-for="DescCashierModel.TotalA" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <label asp-for="DescCashierModel.PaidA">Paid Amount</label>
                        <input asp-for="DescCashierModel.PaidA" class="form-control" value="0" />
                        <span asp-validation-for="DescCashierModel.PaidA" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <label asp-for="DescCashierModel.BlanceA">Balance Amount</label>
                        <input asp-for="DescCashierModel.BlanceA" class="form-control" value="0" readonly="readonly" />
                        <span asp-validation-for="DescCashierModel.BlanceA" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-12 col-lg-12">
        <br />
        <br />
        <div class="btn-group" role="group" aria-label="Actions">
            @* <button type="button" class="btn btn-primary" onclick="addNewRow()">Add Row</button> *@
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
    
</form>

