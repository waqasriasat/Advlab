@model AdvLab_WebApp.Models.Reception.ReceptionViewModel

@{
    ViewData["Title"] = "Reception";
}

<h1>Reception</h1>

@if (TempData["ErrorMessage"] != null)
{

    {
        <div class="alert alert-danger alert-dismissible fade show">
            <strong>Error! </strong> @TempData["ErrorMessage"]
            <button type="button" class="close" data-slide-to="alert">
                <span>&times;</span>
            </button>
        </div>
    }
}
@if (TempData["SuccessMessage"] != null)
{

    {
        <div class="alert alert-success alert-dismissible fade show">
            <strong>Success </strong> @TempData["SuccessMessage"]
            <button type="button" class="close" data-slide-to="alert">
                <span>&times;</span>
            </button>
        </div>
    }
}
@section Scripts {
    <script src="~/js/datatable_file.js"></script>

}
<form asp-action="Index" method="post">
    <div class="row">
        <div class="col-12 col-md-4 col-lg-4">
            <div class="row borderfirst">
                <div class="col-12 col-md-4 col-lg-4">
                    <div class="form-group">
                        <label asp-for="DescCashierModel.MRNO">MR #</label>
                        <input asp-for="DescCashierModel.MRNO" class="form-control" readonly="readonly" />
                        <span asp-validation-for="DescCashierModel.MRNO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-4 col-lg-4">
                    <div class="form-group">
                        <label asp-for="DescCashierModel.LabNo">Lab #</label>
                        <input asp-for="DescCashierModel.LabNo" class="form-control" readonly="readonly" />
                        <span asp-validation-for="DescCashierModel.LabNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-4 col-lg-4">
                    <div class="form-group">
                        <label asp-for="DescCashierModel.CpNo">CP #</label>
                        <input asp-for="DescCashierModel.CpNo" class="form-control" readonly="readonly" />
                        <span asp-validation-for="DescCashierModel.CpNo" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row borderfirst">
                <div class="col-12 col-md-4 col-lg-4">
                    <div class="form-group">
                        <label asp-for="PatRegModel.Initial">Initial</label>
