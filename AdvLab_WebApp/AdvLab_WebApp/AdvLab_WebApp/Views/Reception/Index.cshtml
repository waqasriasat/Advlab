                        </select> *@
                        <input asp-for="PatRegModel.AgeType" class="form-control" />
                        <span asp-validation-for="PatRegModel.AgeType" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-6">
                    <div class="form-group">
                        <label asp-for="PatRegModel.Gender">Gender</label>
