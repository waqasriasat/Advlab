                        <span asp-validation-for="PatRegModel.Initial" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-8 col-lg-8">
                    <div class="form-group">
                        <label asp-for="PatRegModel.FirstName">Name</label>
                        <input asp-for="PatRegModel.FirstName" class="form-control" />
                        <span asp-validation-for="PatRegModel.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-4 col-lg-4">
                    <div class="form-group">
                        <label asp-for="PatRegModel.Relation">Relation</label>
                        @* <select asp-for="PatRegModel.Relation" asp-items="@(new SelectList(ViewBag.RelationList, "Value", "Text", Model.Relation))" class="form-control">
                        </select> *@
                        <input asp-for="PatRegModel.Relation" class="form-control" />
                        <span asp-validation-for="PatRegModel.Relation" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-8 col-lg-8">
                    <div class="form-group">
                        <label asp-for="PatRegModel.RelName">Relation Name</label>
                        <input asp-for="PatRegModel.RelName" class="form-control" />
                        <span asp-validation-for="PatRegModel.RelName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-2 col-lg-2">
                    <div class="form-group">
                        <label asp-for="PatRegModel.Age">Age</label>
                        <input asp-for="PatRegModel.Age" class="form-control" />
                        <span asp-validation-for="PatRegModel.Age" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-4 col-lg-4">
                    <div class="form-group">
                        <label asp-for="PatRegModel.AgeType">AgeType</label>
