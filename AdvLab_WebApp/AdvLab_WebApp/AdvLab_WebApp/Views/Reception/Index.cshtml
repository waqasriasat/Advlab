                        </select> *@
                        <input asp-for="PatRegModel.Gender" class="form-control" />
                        <span asp-validation-for="PatRegModel.Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-6">
                    <div class="form-group">
                        <label asp-for="PatRegModel.DBO">Date of Birth</label>
                        <input asp-for="PatRegModel.DBO" type="date" class="form-control" />
                        <span asp-validation-for="PatRegModel.DBO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-6">
                    <div class="form-group">
                        <label asp-for="PatRegModel.ContNo">Contact #</label>
                        <input asp-for="PatRegModel.ContNo" class="form-control" />
                        <span asp-validation-for="PatRegModel.ContNo" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="row borderfirst">
                <div class="col-12 col-md-4 col-lg-4">
                    <div class="form-group">
                        <label asp-for="DescCashierModel.ClientID">Client ID</label>
                        <input asp-for="DescCashierModel.ClientID" class="form-control" readonly="readonly" />
                        <span asp-validation-for="DescCashierModel.ClientID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-8 col-lg-8">
                    <div class="form-group">
                        <label asp-for="DescCashierModel.ClientName">Client Name</label>
                        <input asp-for="DescCashierModel.ClientName" class="form-control" />
                        <span asp-validation-for="DescCashierModel.ClientName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-4 col-lg-4">
                    <div class="form-group">
                        <label asp-for="DescCashierModel.ClientNo">Ref #</label>
                        <input asp-for="DescCashierModel.ClientNo" class="form-control" />
                        <span asp-validation-for="DescCashierModel.ClientNo" class="text-danger"></span>
                    </div>
                </div>
