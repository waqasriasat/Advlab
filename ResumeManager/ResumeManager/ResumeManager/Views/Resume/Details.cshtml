@model ResumeManager.Models.Applicant

@{
    ViewData["Title"] = "Detail";
}

<div class="col-11 mx-auto pt-0">
    <div class="card">
        <div class="card-header bg-primary text-uppercase text-white">
            <h4>View Applicant</h4>
        </div>
        <form id="ApplicantForm" enctype="multipart/form-data" asp-action="Create">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6" style="padding: 10px 0px 0px 30px;">
                    <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Name : </label>
                                <input asp-for="Name" class="control-label" readonly style="border: none;" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label">Gender : </label>
                                <input asp-for="Gender" class="control-label" readonly style="border: none;" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Age" class="control-label">Age : </label>
                                <input asp-for="Age" class="control-label" readonly style="border: none;" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Qualification" class="control-label">Qualification : </label>
                                <input asp-for="Qualification" class="control-label" readonly style="border: none;" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="TotalExperience" class="control-label">TotalExperience : </label>
                                <input asp-for="TotalExperience" class="control-label" readonly style="border: none;" />
                    </div>
                </div>
                </div>
                </div>
                <div class="col-md-6 btn-group">
                    <div class="form-group col-8 p-0" >
                        
                       
                    </div>
                    <div class="form-group col-4" style="text-align: center;">
                        <label asp-for="ProfilePhoto" class="control-label"></label>
                        <img id="PreviewPhoto" src="~/images/@Model.PhotoUrl" alt="Logo Image"
                             width="125" height="125" style="border:1px; margin-top:20px;" />
                    </div>
                </div>
                <div class="col-md-12">
                    <table id="ExpTable" class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>
                                    CompanyName
                                </th>
                                <th>
                                    Designation
                                </th>
                                <th>
                                    YearsWorked
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Experiences.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input asp-for="@Model.Experiences[i].CompanyName" class="form-control-plaintext" readonly />
                                        @* @Html.EditorFor(x => x.Experiences[i].CompanyName, new { htmlAttributes = new { @class = "form-control" } }) *@
                                    </td>
                                    <td>
                                        <input asp-for="@Model.Experiences[i].Designation" class="form-control-plaintext" readonly />
                                        @* @Html.EditorFor(x => x.Experiences[i].Designation, new { htmlAttributes = new { @class = "form-control" } }) *@
                                    </td>
                                    <td>
                                        <input asp-for="@Model.Experiences[i].YearsWorked" class="form-control-plaintext" readonly />
                                        @* @Html.EditorFor(x => x.Experiences[i].YearsWorked, new { htmlAttributes = new { @class = "form-control" } }) *@
                                        <span asp-validation-for="@Model.Experiences[i].YearsWorked" class="text-danger"></span>
                                    </td>
                                    <td>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <input type="hidden" id="hdnLastIndex" value="0"/>
                <div class="col-12 btn-group">
                    <div class="col-6 form-group text-right p-2">
                        <a asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>
<hr />
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
  }